<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:nettyrpc="http://www.newlandframework.com/nettyrpc"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.newlandframework.com/nettyrpc http://www.newlandframework.com/nettyrpc/nettyrpc.xsd">

    <context:property-placeholder location="classpath:rpc-server.properties"/>
    <bean id="beanFactory" class="BeanFactoryUtils"/>

    <nettyrpc:application name="application-provider" metricsPort="9995" echoPort="10220"/>

    <nettyrpc:parameter key="heartbeat" value="60000"/>
    <nettyrpc:parameter key="heartbeatTimeout" value="60000"/>

    <nettyrpc:protocol id="rpc1" name="rpc" port="10883" serialize="jdk"/>
    <nettyrpc:protocol id="rpc2" name="rpc" port="10881" serialize="jdk"/>

    <nettyrpc:service id="demoAddService" interfaceName="AddCalculate" ref="calcAddService"/>
    <nettyrpc:service id="demoMultiService" interfaceName="MultiCalculate" ref="calcMultiService"/>
    <nettyrpc:service id="demoPersonManage" protocol="rpc1,rpc2" registry="zk2" interfaceName="PersonManage" ref="personManageService"
                      monitor="true" filter="one,default,two" weight="1"/>
    <nettyrpc:service id="demoCostTime" registry="zk" interfaceName="CostTimeCalculate" ref="costTimeCalculateService"/>
    <nettyrpc:service id="demoCache" registry="zk" interfaceName="Cache" ref="cacheService"/>
    <nettyrpc:service id="demoStore" registry="zk" interfaceName="Store" ref="storeService"/>
    <nettyrpc:service id="demoAbility" registry="zk" interfaceName="AbilityDetail" ref="abilityProvider"/>

    <!-- registry用来注册Rpc服务器，其中ipAddr为RPC服务器ip地址及端口(客户端连接这个地址），而echoApiPort为Rpc服务端服务能力展示开放端口
    (可以通过浏览器访问这个端口，获取服务端的信息) -->
    <nettyrpc:registry id="zk" name="zookeeper"  address="127.0.0.1:2181"/>
    <nettyrpc:registry id="zk2" address="127.0.0.1:2182" name="zookeeper"/>

    <bean id="calcAddService" class="AddCalculateImpl"/>
    <bean id="calcMultiService" class="MultiCalculateImpl"/>
    <bean id="personManageService" class="PersonManageImpl"/>
    <bean id="costTimeCalculateService" class="CostTimeCalculateImpl"/>
    <bean id="cacheService" class="CacheImpl"/>
    <bean id="storeService" class="StoreImpl"/>
    <bean id="abilityProvider" class="AbilityDetailProvider"/>

</beans>
