<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:nettyrpc="http://www.newlandframework.com/nettyrpc" xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
    http://www.newlandframework.com/nettyrpc http://www.newlandframework.com/nettyrpc/nettyrpc.xsd">
    <context:property-placeholder location="classpath:rpc-server.properties"/>
    
    <nettyrpc:application name="consumer-app"/>
    
    <nettyrpc:registry address="127.0.0.1:2181" name="zookeeper"/>

    <nettyrpc:reference id="addCalc" interfaceName="com.xu.rpc.services.AddCalculate" url="rpc://169.254.207.250:10886;rpc://169.254.207.250:10887"/>
    <nettyrpc:reference id="multiCalc" interfaceName="com.xu.rpc.services.MultiCalculate"/>
    <nettyrpc:reference id="personManage" interfaceName="com.xu.rpc.services.PersonManage"/>
    <nettyrpc:reference id="costTime" interfaceName="com.xu.rpc.services.CostTimeCalculate"/>
    <nettyrpc:reference id="ability" interfaceName="com.xu.rpc.core.AbilityDetail"/>
    <nettyrpc:reference id="cache" interfaceName="com.xu.rpc.services.Cache"/>
    <nettyrpc:reference id="store" interfaceName="com.xu.rpc.services.Store"/>
</beans>
